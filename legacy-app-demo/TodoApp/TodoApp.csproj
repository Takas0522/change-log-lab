    <Reference Include="System.Data.SQLite">
      <HintPath>..\packages\System.Data.SQLite.Core.1.0.118.0\lib\net46\System.Data.SQLite.dll</HintPath>
    </Reference>
  </ItemGroup>

  <!-- ===== コンパイル対象 ===== -->
  <ItemGroup>
