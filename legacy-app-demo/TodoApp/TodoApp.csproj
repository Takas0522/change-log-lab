    <Content Include="AddEditTask.aspx" />
    <Content Include="Error.aspx" />
    <Content Include="Site.Master" />
    <Content Include="Web.config" />
    <Content Include="packages.config" />
  </ItemGroup>

  <!-- ===== その他ファイル ===== -->
  <ItemGroup>
